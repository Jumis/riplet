mkdir -p /etc/service/nc;
cat <<E > /etc/service/nc/run
#!/bin/bash
nc -k -l -p $(cat /riplet/service/nginx/ubuntu/make.port) | \
 grep -E -f /etc/service/nc/secure.mask | sh 2>&1
E;

cat <<E > /etc/service/nc/secure.mask
^: $(hostname);
E

ifconfig lo up;
chmod 700 /etc/instance/secure.mask;
chmod +x /etc/service/nc/run

