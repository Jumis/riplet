### foldersio nginx dependencies
apt-get install openjdk-7-jre-headless tomcat7 libtcnative-1 daemontools -y
/etc/init.d/tomcat7 stop;
useradd --no-create-home tomcat;

## init
mkdir -p /etc/service/tomcat;
cp /riplet/service/tomcat/run /etc/service/tomcat/run;
chmod +x /etc/service/tomcat/bin/run;
