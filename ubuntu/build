### custom builds for tomcat dependencies

## apt-cache depends postgresql-9.1
apt-get install libc6  libcomerr2  libgssapi-krb5-2  libkrb5-3  libldap-2.4-2  libpam0g  libssl1.0.0  libxml2  tzdata  ssl-cert  locales -y;

## the hard way.
apt-get install libxslt1.1 libossp-uuid16 -y;
/etc/init.d/postgresql stop;


mkdir -p /build/ubuntu/postgres;
cd /build/ubuntu/postgres;
curl -O http://apt.postgresql.org/pub/repos/apt/pool/main/p/postgresql-9.3/libpq5_9.3.2-1.pgdg12.4%2b1_amd64.deb
curl -O http://apt.postgresql.org/pub/repos/apt/pool/main/p/postgresql-9.3/postgresql-9.3_9.3.2-1.pgdg12.4%2b1_amd64.deb
curl -O http://apt.postgresql.org/pub/repos/apt/pool/main/p/postgresql-9.3/postgresql-contrib-9.3_9.3.2-1.pgdg12.4%2b1_amd64.deb
curl -O http://apt.postgresql.org/pub/repos/apt/pool/main/p/postgresql-9.3/postgresql-client-9.3_9.3.2-1.pgdg12.4%2b1_amd64.deb
curl -O http://apt.postgresql.org/pub/repos/apt/pool/main/p/postgresql-common/postgresql-common_151.pgdg12.4%2b1_all.deb
curl -O http://apt.postgresql.org/pub/repos/apt/pool/main/p/postgresql-common/postgresql-client-common_151.pgdg12.4%2b1_all.deb
curl -O http://apt.postgresql.org/pub/repos/apt/pool/main/p/pgdg-keyring/pgdg-keyring_2013.2_all.deb

sudo dpkg -i *.deb;

## fixing something in theory.
apt-get -f install -y;
/etc/init.d/postgresql stop;

## apt-get remove postgresql-9.1;


