### custom nginx build

DEPS="gcc make libpq-dev libpcre3-dev libxml2-dev libxslt1-dev libgd2-noxpm-dev libgeoip-dev patch";
command -v git >/dev/null 2>&1 || { DEPS="$DEPS git"; };
command -v curl >/dev/null 2>&1 || { DEPS="$DEPS curl"; };

apt-get install $DEPS -y;

mkdir -p /build/ubuntu/nginx;
cd /build/ubuntu/nginx;

curl -O http://nginx.org/download/nginx-1.4.2.tar.gz;
tar -zxf nginx-1.4.2.tar.gz;
cd nginx-1.4.2;

git clone https://github.com/wandenberg/nginx-push-stream-module.git
git clone https://github.com/FRiCKLE/ngx_postgres.git
git clone https://github.com/agentzh/echo-nginx-module.git
git clone https://github.com/agentzh/memc-nginx-module.git
git clone https://github.com/perusio/nginx-auth-request-module.git

curl -O http://yaoweibin.cn/patches/nginx-1.4.2-no_buffer-v8.patch;
patch -p 1 < nginx-1.4.2-no_buffer-v8.patch;

./configure --prefix=/usr/share/nginx --sbin-path=/usr/sbin/nginx --conf-path=/etc/nginx/nginx.conf --error-log-path=/var/log/nginx/error.log --http-log-path=/var/log/nginx/access.log --http-client-body-temp-path=/var/lib/nginx/tmp/client_body --http-proxy-temp-path=/var/lib/nginx/tmp/proxy --http-fastcgi-temp-path=/var/lib/nginx/tmp/fastcgi --http-uwsgi-temp-path=/var/lib/nginx/tmp/uwsgi --http-scgi-temp-path=/var/lib/nginx/tmp/scgi --pid-path=/var/run/nginx.pid --lock-path=/var/lock/subsys/nginx --user=nginx --group=nginx --with-file-aio --with-ipv6 --with-http_ssl_module --with-http_realip_module --with-http_addition_module --with-http_xslt_module --with-http_image_filter_module --with-http_geoip_module --with-http_sub_module --with-http_dav_module --with-http_flv_module --with-http_mp4_module --with-http_gzip_static_module --with-http_random_index_module --with-http_secure_link_module --with-http_degradation_module --with-http_stub_status_module --with-mail --with-mail_ssl_module --with-cc-opt='-O2 -g -pipe -Wall -Wp,-D_FORTIFY_SOURCE=2 -fexceptions -fstack-protector --param=ssp-buffer-size=4 -m64 -mtune=generic' --with-ld-opt=' -Wl,-E' --add-module=./nginx-push-stream-module --add-module=./ngx_postgres --add-module=./echo-nginx-module --add-module=./memc-nginx-module --add-module=./nginx-auth-request-module

make install
 
